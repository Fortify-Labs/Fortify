{
	// Use IntelliSense to learn about possible Node.js debug attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "DEBUG",
			"args": [],
			"cwd": "${workspaceRoot}",
			"outFiles": [
				"${workspaceRoot}/build/*"
			],
			"preLaunchTask": "npm: compile",
			"program": "${workspaceRoot}/src/index.ts",
      "internalConsoleOptions": "openOnSessionStart",
			"runtimeArgs": [
				"--nolazy",
				"-r",
				"tsconfig-paths/register"
			],
			"runtimeExecutable": null,
			"sourceMaps": true,
			"stopOnEntry": false,
			"env": {
        "DEBUG": "app::*",
				"TS_NODE_PROJECT": "."
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "DEBUG Verbose",
			"args": [],
			"cwd": "${workspaceRoot}",
			"env": {
				"DEBUG": "*",
				"TS_NODE_PROJECT": "."
			},
			"outFiles": [
				"${workspaceRoot}/build/*"
			],
			"preLaunchTask": "npm: compile",
			"program": "${workspaceRoot}/src/index.ts",
      "internalConsoleOptions": "openOnSessionStart",
			"runtimeArgs": [
				"--nolazy",
				"-r",
				"tsconfig-paths/register"
			],
			"runtimeExecutable": null,
			"sourceMaps": true,
			"stopOnEntry": false,
		}
	]
}